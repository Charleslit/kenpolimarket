# Environment Configuration
NODE_ENV=development

# Database
DATABASE_URL=postgresql://kenpolimarket:password@localhost:5432/kenpolimarket
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=kenpolimarket
DATABASE_USER=kenpolimarket
DATABASE_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Backend API
BACKEND_URL=http://localhost:8000
API_SECRET_KEY=your-secret-key-change-in-production
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Temporary Admin Protection (Frontend)
# This is a simple password protection for admin tools
# Will be replaced with proper authentication later
NEXT_PUBLIC_ADMIN_PASSWORD=your-admin-password-change-this

# AWS (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=kenpolimarket-data

# Data Sources
IEBC_DATA_URL=https://www.iebc.or.ke
KNBS_DATA_URL=https://www.knbs.or.ke

# Feature Flags
ENABLE_PLAY_MONEY_MARKET=true
ENABLE_SURVEY_PLUGIN=true
ENABLE_API_ACCESS=true

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Privacy & Compliance
MIN_AGGREGATE_SIZE=10
ENABLE_DIFFERENTIAL_PRIVACY=true
PRIVACY_EPSILON=1.0

# Model Configuration
MODEL_UPDATE_INTERVAL_HOURS=24
FORECAST_CONFIDENCE_LEVEL=0.90

